 set use_from=yes
 set mbox=+Inbox
 set spoolfile=+Inbox
 set envelope_from_address='hor@youdomain.com'
 set from='hor@yourdomain.com'
 set force_name=yes
 set realname='HOR'
 set my_user=hor@mydomain.com
 set my_pass='password'
 set smtp_url=smtps://$my_user:$my_pass@smtp.mydomain.com:465
 unset record
 set copy=no
